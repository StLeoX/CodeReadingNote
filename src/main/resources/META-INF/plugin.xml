<idea-plugin>
    <id>jp.kitabatakep.intellij.plugins.CodeReadingNote</id>
    <name>Code Reading Note</name>
    <vendor email="kitabatake.programmer@gmail.com">kitabatakep</vendor>
    <version>0.1.3</version>
<!--    <idea-version since-build="193" />-->

    <description><![CDATA[
    A plugin support to your code reading work by providing noting down features related to your understanding about project's code.


    ]]></description>

    <change-notes><![CDATA[
        <html>
        <body>
            <h1>0.1.2</h1>
            <p>Fix bug.</p>

            <h1>0.1.1</h1>
            <p>Set icon.</p>

            <h1>0.1.0</h1>
            <p>
                First version of this plugin.
                Implements core features.
            </p>
        </body>
        </html>
    ]]></change-notes>

    <!-- please see http://www.jetbrains.org/intellij/sdk/docs/basics/getting_started/plugin_compatibility.html
         on how to target different products -->
    <depends>com.intellij.modules.platform</depends>

    <extensions defaultExtensionNs="com.intellij">
        <projectService serviceImplementation="jp.kitabatakep.intellij.plugins.codereadingnote.CodeReadingNoteService" />
        <toolWindow icon="/META-INF/pluginIcon.svg" id="Code Reading Note" anchor="bottom" factoryClass="jp.kitabatakep.intellij.plugins.codereadingnote.ManagementToolWindowFactory" />

    </extensions>

    <actions>
        <action
                icon="/META-INF/pluginIcon.svg"
                id="jp.kitabatakep.intellij.plugins.codereadingnote.actions.TopicLineAddAction"
                class="jp.kitabatakep.intellij.plugins.codereadingnote.actions.TopicLineAddAction"
                text="Add to Topic">
            <add-to-group group-id="EditorPopupMenu" />
        </action>
    </actions>
</idea-plugin>