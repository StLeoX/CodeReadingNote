<idea-plugin>
    <id>org.example.CodeReadingNote</id>
    <name>Code Reading Note</name>
    <vendor email="e2tod2@gmail.com" url="https://github.com/kitabatake">kitabatake</vendor>

    <description><![CDATA[
    aaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaa
    ]]></description>

    <!-- please see http://www.jetbrains.org/intellij/sdk/docs/basics/getting_started/plugin_compatibility.html
         on how to target different products -->
    <depends>com.intellij.modules.platform</depends>

    <extensions defaultExtensionNs="com.intellij">
        <projectService serviceImplementation="jp.kitabatakep.intellij.plugins.codereadingnote.CodeReadingNoteService" />
        <toolWindow icon="/icons/app.png" id="Code Reading Note" anchor="bottom" factoryClass="jp.kitabatakep.intellij.plugins.codereadingnote.ManagementToolWindowFactory" />

    </extensions>

    <actions>
        <action
                icon="/icons/app.png"
                id="jp.kitabatakep.intellij.plugins.codereadingnote.actions.TopicLineAddAction"
                class="jp.kitabatakep.intellij.plugins.codereadingnote.actions.TopicLineAddAction"
                text="Add to Topic">
            <add-to-group group-id="EditorPopupMenu" />
        </action>
    </actions>
</idea-plugin>