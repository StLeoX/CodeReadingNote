<idea-plugin>
    <id>org.example.CodeReadingRecorder</id>
    <name>Code Reading Recorder</name>
    <vendor email="e2tod2@gmail.com" url="https://github.com/kitabatake">kitabatake</vendor>

    <description><![CDATA[
    aaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaa
    ]]></description>

    <!-- please see http://www.jetbrains.org/intellij/sdk/docs/basics/getting_started/plugin_compatibility.html
         on how to target different products -->
    <depends>com.intellij.modules.platform</depends>
    <depends>org.intellij.plugins.markdown</depends>

    <extensions defaultExtensionNs="com.intellij">
        <projectService serviceImplementation="jp.kitabatakep.intellij.plugins.codereadingrecorder.CodeReadingRecorderService" />
        <toolWindow id="CodeReadingRecorder" anchor="bottom" factoryClass="jp.kitabatakep.intellij.plugins.codereadingrecorder.ManagementToolWindowFactory" />

    </extensions>

    <actions>
        <action
                id="jp.kitabatakep.intellij.plugins.codereadingrecorder.actions.TopicLineAddAction"
                class="jp.kitabatakep.intellij.plugins.codereadingrecorder.actions.TopicLineAddAction"
                text="Add to Topic">
            <add-to-group group-id="EditorPopupMenu" />
        </action>
    </actions>
</idea-plugin>